rtlprio=0 -- must be lower than the app's prio; required for the tracelogger
apps = {
   { prio=1, name='', path='SharkTrustX.zip'},
}

tracelogger = { auth=true }
realm="{{ realm }}"

users = { 
   ["{{ rootuser }}"]={ "{{ rootuserha1.stdout }}" }
}

fileserver={
   fsname="fs",
   ioname="home",
   path="",
   lockdir=".LOCK"
}


log={
   logerr = true,
   signature="{{ emailsignature }}",
   smtp={
      subject="{{ emailsubject }}",
      from = "{{ emailfrom }}",
      to = "{{ emailto }}",
      server = "{{ emailserver }}",
      port = {{ emailport }},
      useauth = true,
      consec = "{{ emailconsec }}",
      user = "{{ emailuser }}",
      password = "{{ emailpassword }}",
   }
}


settings={
   ns1="{{ settingsns1 }}",
   ns2="{{ settingsns2 }}",
   dn="{{ settingsdn }}",
   --ip="", -- Set the public IP address if the server cannot auto detect
   acme={
      production=true
   },
   regauth=true -- Default: the zone registration page (/) requires authentication
}
